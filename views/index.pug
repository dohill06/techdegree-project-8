extends layout.pug

block content
    h1= title
    
    p
        a.button(href='/books/new') Create New Book
    form(action='/books/search', method='get')
        input#search(name='search', type='text', placeholder='Book Search')
        input#search-submit(type='submit', value='Search')
    table
        thread
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href=`/books/${book.id}`)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
